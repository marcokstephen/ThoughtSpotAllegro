<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sm.com.httesting.ResourceDetails">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:layout_above="@+id/button_bar_bottom_details"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textview_resource_details_description"
                android:text="THIS IS A DESCRIPTION OF THE LOCATION THIS IS A DESCRIPTION OF THE LOCATION THIS IS A DESCRIPTION OF THE LOCATION"/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <Button
                    android:layout_width="0px"
                    android:id="@+id/button_add_comment"
                    android:text="@string/button_add_comment"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
                <Button
                    android:layout_width="0px"
                    android:id="@+id/button_add_favourite"
                    android:text="@string/button_add_favourite"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout style="?android:buttonBarStyle"
        android:layout_width="match_parent"
        android:id="@+id/button_bar_bottom_details"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <Button style="?android:buttonBarButtonStyle"
            android:id="@+id/button_website"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/button_website"/>
        <Button style="?android:buttonBarButtonStyle"
            android:id="@+id/button_call"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/button_call"/>
        <Button style="?android:buttonBarButtonStyle"
            android:id="@+id/button_maps"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/button_maps"/>
    </LinearLayout>

</RelativeLayout>
