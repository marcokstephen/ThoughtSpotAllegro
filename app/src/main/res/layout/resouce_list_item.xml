<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Title"
        android:textSize="25sp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:id="@+id/textview_resource_name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textview_resource_address"
        android:text="Address"
        android:layout_toEndOf="@+id/imageView2"
        android:layout_toRightOf="@id/imageView2"
        android:layout_below="@+id/textview_resource_name"
         />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textview_resource_city"
        android:text="City"
        android:layout_below="@+id/textview_resource_address"
        android:layout_alignLeft="@+id/textview_resource_address"
        android:layout_alignStart="@+id/textview_resource_address" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autoLink="phone"
        android:id="@+id/textview_resource_phone"
        android:text="Phone"
        android:layout_below="@+id/textview_resource_city"
        android:layout_alignLeft="@+id/textview_resource_city"
        android:layout_alignStart="@+id/textview_resource_city" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textview_resource_counter"
        android:text="Comments"
        android:layout_alignTop="@+id/textview_resource_website"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autoLink="web"
        android:id="@+id/textview_resource_website"
        android:text="Website"
        android:layout_below="@+id/textview_resource_phone"
        android:layout_alignLeft="@+id/textview_resource_phone"
        android:layout_alignStart="@+id/textview_resource_phone"
        android:visibility="invisible"/>

    <ImageView
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:layout_below="@+id/textview_resource_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/textview_resource_website"
        android:src="@drawable/sunrise_filler"
        android:paddingRight="7dp"
        android:paddingLeft="10dp"
        />

</RelativeLayout>